{
  "project": {
    "name": "1602 Lucky Draw Wheel",
    "description": "幸运轮盘抽奖系统静态网页 - A lucky draw wheel system with Firebase backend",
    "type": "web-application",
    "framework": "vanilla-js",
    "backend": "firebase"
  },
  "gemini": {
    "model": "gemini-1.5-pro",
    "temperature": 0.7,
    "max_tokens": 2048,
    "context_window": 32768
  },
  "code_analysis": {
    "include_patterns": [
      "*.html",
      "*.js",
      "*.css",
      "*.json",
      "*.md"
    ],
    "exclude_patterns": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      "build/**"
    ],
    "file_types": {
      "html": {
        "language": "html",
        "features": ["tailwindcss", "firebase", "canvas", "responsive-design"]
      },
      "js": {
        "language": "javascript",
        "features": ["es6-modules", "firebase-v9", "dom-manipulation", "async-await"]
      },
      "css": {
        "language": "css",
        "features": ["animations", "responsive", "tailwindcss"]
      }
    }
  },
  "project_context": {
    "main_files": [
      "index.html",
      "admin.html"
    ],
    "key_features": [
      "Lucky wheel spinning animation",
      "User registration system",
      "Firebase Firestore integration",
      "Multi-language support (EN/CN)",
      "Admin panel for user management",
      "AI-powered features with Gemini",
      "Responsive design with TailwindCSS"
    ],
    "dependencies": {
      "firebase": "11.6.1",
      "tailwindcss": "cdn",
      "canvas-confetti": "1.6.0"
    }
  },
  "ai_assistance": {
    "code_style": {
      "javascript": {
        "style": "modern-es6",
        "async_pattern": "async-await",
        "module_system": "es6-modules"
      },
      "html": {
        "framework": "tailwindcss",
        "responsive": true,
        "accessibility": true
      }
    },
    "best_practices": [
      "Use semantic HTML elements",
      "Implement proper error handling for Firebase operations",
      "Follow responsive design principles",
      "Maintain consistent code formatting",
      "Use meaningful variable and function names",
      "Add proper comments for complex logic"
    ]
  }
}